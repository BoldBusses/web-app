<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Add student to <%= @route.name %></h1>
    </div>
  </div>
</div>

<%= form_for([@route, @ridership]) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :student %>
        <%= f.select :student_id, @students.collect { |s| [s.name, s.id] }, {}, { class: "form-control" } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag :pickup_hour %>
        <%= select_tag :pickup_hour, options_from_collection_for_select(1..12, :itself, :itself), include_blank: false, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag :pickup_minute %>
        <%= select_tag :pickup_minute, options_from_collection_for_select(0..59, :itself, :itself), include_blank: false, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag :pickup_meridian %>
        <%= select_tag :pickup_meridian, options_from_collection_for_select(["AM", "PM"], :itself, :itself), include_blank: false, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-12">
      <%= f.submit "Add student", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
