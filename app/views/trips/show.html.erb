<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>
        <%= @trip.route.name %>
        <small><%= @trip.status %></small>
      </h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <h2>Driver</h2>
    <p>
      <strong>Name:</strong> <%= @trip.route.driver.name %>
    </p>
    <p>
      <strong>Phone number:</strong> <%= @trip.route.driver.phone_number %>
    </p>
    <p>
      <%= link_to "Complete trip", edit_trip_path(@trip), class: "btn btn-primary", data: { confirm: "Ready to complete trip?" } %>
    </p>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-12 sidebar">
    <% @trip.route.riderships.ordered_by_pickup_time.each do |ridership| %>
      <div class="feed-item">
        <h3><%= ridership.student.name %></h3>
        <p>
          <strong>Pickup time:</strong> <%= ridership.pickup_time.strftime("%l:%M %P") %>
        </p>
        <p>
          <strong>Address:</strong><br/>
          <%= ridership.student.street_address %><br/>
          <%= ridership.student.city %>, <%= ridership.student.state %> <%= ridership.student.zipcode %>
        </p>
        <div class="btn-group">
          <%= link_to "Onboard", "#", class: "btn btn-success" %>
          <%= link_to "Absent", "#", class: "btn btn-danger" %>
        </div>
        <div style="height:10px;"></div>
      </div>
    <% end %>
  </div>
</div>

